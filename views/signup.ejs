<%- include("header") -%>
<style>
  body {font-family: Arial, Helvetica, sans-serif;}
  form {border: 3px solid #f1f1f1;}
  
  input[type=text], input[type=password],input[type=email] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }
  
  button {
    background-color: #a683e3;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
  }
  
  button:hover {
    opacity: 0.8;
  }
  
  .cancelbtn {
    width: auto;
    padding: 10px 18px;
    background-color: #f44336;
  }
  
  .imgcontainer {
    text-align: center;
    margin: 24px 0 12px 0;
  }
  
  img.avatar {
    width: 40%;
    border-radius: 50%;
  }
  
  .container {
    padding: 16px;
  }
  
  .psw {
    float: right;
    padding: 10px;
    margin-top: 19px;
    border: 2px solid transparent;
    border-radius: 2em;
    transition: all 0.2s ease-in-out;
  }
  .psw:hover {
    border: 2px solid black;
    border-radius: 2em;
    transition: all 0.2s ease-in-out;
}

  
  /* Change styles for span and cancel button on extra small screens */
  @media screen and (max-width: 300px) {
    .psw {
       display: block;
       float: none;
    }
    .cancelbtn {
       width: 100%;
    }
  }
</style>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">


    <form action="/signup" method="post">
    
      <div class="container">
        <input type="hidden" value="default" name="name" required>
        <label for="username"><b>Email</b></label>
        <input type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" placeholder="Enter email" name="username" required>
    
        <label for="passsword"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="password" required>
            
        <button type="submit">SignUp</button>
      
      </div>
    </form>
    <a class="psw" href="/login">Want to Login?</a>

  </div>

<%- include("footer") -%>
